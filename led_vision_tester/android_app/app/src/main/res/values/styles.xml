<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 기본 앱 테마 -->
    <style name="Theme.LEDVisionTester" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- ActionBar 없는 테마 -->
    <style name="Theme.LEDVisionTester.NoActionBar" parent="Theme.LEDVisionTester">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- 버튼 스타일 -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_secondary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="ButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/led_red</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">60dp</item>
    </style>
    
    <style name="ButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/led_green</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">60dp</item>
    </style>
    
    <!-- 텍스트 스타일 -->
    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- 입력 필드 스타일 -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
    
    <!-- 카드 스타일 -->
    <style name="CardStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- 상태 표시기 스타일 -->
    <style name="StatusIndicator">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>
    
    <!-- 진행률 바 스타일 -->
    <style name="ProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:progressBackgroundTint">@color/divider_color</item>
        <item name="android:minHeight">8dp</item>
    </style>
    
    <!-- SeekBar 스타일 -->
    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:progressBackgroundTint">@color/divider_color</item>
        <item name="android:thumbTint">@color/primary_color</item>
    </style>
    
    <!-- 라디오 버튼 스타일 -->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:buttonTint">@color/primary_color</item>
    </style>
    
    <!-- 체크박스 스타일 -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:buttonTint">@color/primary_color</item>
    </style>
    
    <!-- 툴바 스타일 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_color</item>
        <item name="titleTextColor">@color/text_white</item>
        <item name="subtitleTextColor">@color/text_white</item>
    </style>
    
</resources>